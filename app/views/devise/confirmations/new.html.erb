<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post, class: "row column authentication-form" } ) do |f| %>
  <%= content_tag :h4, t("passwords.new.form.heading"), class: "text-center" %>
  <%= devise_error_messages! %>
  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true, placeholder: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)  %>
  <p>
    <%= f.submit t("confirmations.new.form.submit"), class: "button expanded" %>
  <p>
  <p class="text-center"><%= render "devise/shared/links" %></p>
<% end %>
