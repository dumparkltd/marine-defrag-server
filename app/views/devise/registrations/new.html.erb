<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post, class: "row column authentication-form" } ) do |f| %>
  <%= content_tag :h4, t("registrations.new.form.heading"), class: "text-center" %>
  <%= render "devise/shared/form_errors", resource: f.object -%>

  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true, placeholder: true %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <%= f.label :password %>
  <%= f.password_field :password, autocomplete: "off" %>
  <% if @minimum_password_length %>
    <p class="help-text">(<%= @minimum_password_length %> characters minimum)</p>
  <% end %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, autocomplete: "off" %>

  <p>
    <%= f.submit t("registrations.new.form.submit"), class: "button expanded" %>
  </p>
  <p class="text-center"><%= render "devise/shared/links" %></p>
<% end %>
